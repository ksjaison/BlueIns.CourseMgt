@using BlueIns.CourseMgt.Web.Models
@model StudentDetailsViewModel


@{
    ViewData["Title"] = "Delete";
}
<div>
    <h5>Delete Student Details</h5>
    <hr />
    <form asp-action="Delete">
    <dl class="row">
        <dt class = "col-sm-2" hidden="hidden">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10" hidden="hidden">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           SurName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurName)
        </dd>
        <dt class = "col-sm-2">
           Gender
        </dt>  
        @if(Model.Gender == "M"){
        <dd class = "col-sm-10">
            Male
        </dd>
        }else{
        <dd class = "col-sm-10">
            Female
        </dd>
        }
        <dt class = "col-sm-2">
           DOB
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt class = "col-sm-2">
           Address 1
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address1)
        </dd>
        <dt class = "col-sm-2">
           Address 2
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address2)
        </dd>
        <dt class = "col-sm-2">
           Address 3
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address3)
        </dd>
    </dl>    
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you to delete this Record?')"/> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
